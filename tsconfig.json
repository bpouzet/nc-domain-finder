{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "types": [ "node", "webpack-env", "react", "react-native" ],
    "typeRoots": [ "src/types" ],
    "baseUrl": ".",
    "paths": {
      "@components/*": [ "src/components/*" ],
      "@config/*": [ "src/config/*" ],
      "@customTypes/*": [ "src/types/*" ],
      "@helpers/*": [ "src/helpers/*" ],
      "@hooks/*": [ "src/hooks/*" ]
    }
  },
  "include": [ "src", "app.config.ts", ".eslintrc.js", "babel.config.js" ],
}
